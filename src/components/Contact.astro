<style>
	.contact {
		padding: 8rem 0;
		background: linear-gradient(135deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
		position: relative;
	}

	.contact::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, var(--accent-green), transparent);
	}

	.contact-header {
		text-align: center;
		margin-bottom: 4rem;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 1rem;
	}

	.section-number {
		font-family: 'JetBrains Mono', monospace;
		color: var(--accent-green);
		font-size: 1.5rem;
	}

	.contact-description {
		font-size: 1.25rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.contact-description strong {
		color: var(--accent-green);
		font-weight: 600;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		margin-bottom: 4rem;
		align-items: start;
	}

	.contact-card {
		background: rgba(26, 26, 26, 0.8);
		border: 1px solid rgba(0, 255, 136, 0.2);
		border-radius: 20px;
		padding: 2.5rem;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.contact-card:hover {
		border-color: var(--accent-green);
		box-shadow: 0 20px 40px var(--glow-green);
		transform: translateY(-3px);
	}

	.card-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.card-header h3 {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-primary);
	}

	.card-header p {
		color: var(--text-secondary);
		font-size: 1rem;
	}

	.contact-methods {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 2rem;
	}

	.contact-method {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1.5rem;
		border-radius: 12px;
		text-decoration: none;
		transition: all 0.3s ease;
		border: 1px solid transparent;
	}

	.contact-method.primary {
		background: linear-gradient(135deg, var(--accent-blue), var(--accent-green));
		color: var(--bg-primary);
	}

	.contact-method.primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 15px 30px var(--glow-blue);
	}

	.contact-method.secondary {
		background: rgba(42, 42, 42, 0.5);
		color: var(--text-primary);
		border-color: rgba(139, 92, 246, 0.3);
	}

	.contact-method.secondary:hover {
		border-color: var(--accent-purple);
		background: rgba(139, 92, 246, 0.1);
		transform: translateY(-2px);
	}

	.method-icon {
		font-size: 1.5rem;
		width: 50px;
		height: 50px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 8px;
		background: rgba(255, 255, 255, 0.1);
		flex-shrink: 0;
	}

	.method-info h4 {
		font-size: 1rem;
		font-weight: 600;
		margin-bottom: 0.25rem;
	}

	.method-info span {
		font-size: 0.875rem;
		opacity: 0.8;
	}

	.availability {
		text-align: center;
		padding: 1rem;
		background: rgba(0, 255, 136, 0.1);
		border-radius: 8px;
		border: 1px solid rgba(0, 255, 136, 0.3);
	}

	.availability-indicator {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}

	.status-dot {
		width: 8px;
		height: 8px;
		background: var(--accent-green);
		border-radius: 50%;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.5; }
	}

	.status-text {
		color: var(--accent-green);
		font-size: 0.875rem;
		font-weight: 500;
	}

	.collaboration-card {
		background: rgba(26, 26, 26, 0.8);
		border: 1px solid rgba(0, 212, 255, 0.2);
		border-radius: 20px;
		padding: 2rem;
		backdrop-filter: blur(10px);
		transition: all 0.3s ease;
	}

	.collaboration-card:hover {
		border-color: var(--accent-blue);
		box-shadow: 0 15px 30px var(--glow-blue);
		transform: translateY(-3px);
	}

	.collab-header h4 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		text-align: center;
		color: var(--text-primary);
	}

	.collab-items {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.collab-item {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1rem;
		background: rgba(42, 42, 42, 0.5);
		border-radius: 8px;
		transition: all 0.3s ease;
		font-size: 0.875rem;
		color: var(--text-secondary);
	}

	.collab-item:hover {
		background: rgba(0, 212, 255, 0.1);
		color: var(--text-primary);
		transform: translateX(5px);
	}

	.collab-icon {
		font-size: 1.2rem;
		flex-shrink: 0;
	}

	.cta-section {
		text-align: center;
		padding: 3rem 2rem;
		background: rgba(26, 26, 26, 0.5);
		border-radius: 20px;
		border: 1px solid rgba(0, 212, 255, 0.2);
		backdrop-filter: blur(10px);
	}

	.cta-content h3 {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--text-primary);
	}

	.cta-content p {
		font-size: 1.125rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 1.25rem 2.5rem;
		background: linear-gradient(135deg, var(--accent-green), var(--accent-blue));
		color: var(--bg-primary);
		text-decoration: none;
		font-weight: 600;
		font-size: 1.125rem;
		border-radius: 50px;
		transition: all 0.3s ease;
		box-shadow: 0 10px 30px var(--glow-blue);
	}

	.cta-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 20px 40px var(--glow-green);
	}

	.cta-button svg {
		transition: transform 0.3s ease;
	}

	.cta-button:hover svg {
		transform: translate(3px, -3px);
	}

	@media (max-width: 1024px) {
		.contact-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.collab-items {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 768px) {
		.contact {
			padding: 4rem 0;
		}

		.section-title {
			font-size: 2rem;
			flex-direction: column;
			gap: 0.5rem;
		}

		.contact-description {
			font-size: 1.125rem;
		}

		.contact-card {
			padding: 2rem 1.5rem;
		}

		.collaboration-card {
			padding: 1.5rem;
		}

		.cta-content h3 {
			font-size: 1.5rem;
		}

		.cta-content p {
			font-size: 1rem;
		}

		.cta-button {
			padding: 1rem 2rem;
			font-size: 1rem;
		}
	}
</style>