<style>
  :root {
    --bg-primary: #0a0a0a;
    --bg-secondary: #1a1a1a;
    --text-primary: #ffffff;
    --text-secondary: #b0b0b0;
    --accent-green: #00ff88;
    --accent-blue: #00d4ff;
    --glow-green: rgba(0, 255, 136, 0.3);
    --glow-blue: rgba(0, 212, 255, 0.3);
  }

  main {
    padding-top: 80px;
    min-height: 100vh;
    background: var(--bg-primary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .links-container {
    max-width: 600px;
    width: 100%;
    padding: 2rem;
    margin: 0 auto;
  }

  .profile-section {
    text-align: center;
    margin-bottom: 3rem;
  }

  .profile-image {
    width: 120px;
    height: 120px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--accent-green);
    box-shadow: 0 0 30px var(--glow-green);
    transition: all 0.3s ease;
  }

  .profile-image:hover {
    transform: scale(1.05);
    box-shadow: 0 0 40px var(--glow-green);
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-section h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .profile-section p {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 0;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: rgba(26, 26, 26, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-secondary);
    transition: all 0.3s ease;
    text-decoration: none;
    backdrop-filter: blur(10px);
  }

  .social-link:hover {
    transform: translateY(-3px);
    color: var(--text-primary);
  }

  .social-link.email:hover {
    border-color: var(--accent-green);
    box-shadow: 0 10px 20px var(--glow-green);
  }

  .social-link.whatsapp:hover {
    border-color: #25d366;
    box-shadow: 0 10px 20px rgba(37, 211, 102, 0.3);
  }

  .social-link.linkedin:hover {
    border-color: #0077b5;
    box-shadow: 0 10px 20px rgba(0, 119, 181, 0.3);
  }

  .social-link.instagram:hover {
    border-color: #e4405f;
    box-shadow: 0 10px 20px rgba(228, 64, 95, 0.3);
  }

  .links-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .link-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    background: rgba(26, 26, 26, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .link-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.5s ease;
  }

  .link-item:hover::before {
    left: 100%;
  }

  .link-item:hover {
    transform: translateY(-3px);
    border-color: var(--accent-green);
    box-shadow: 0 15px 30px var(--glow-green);
  }

  .link-item.featured {
    border-color: var(--accent-blue);
    background: linear-gradient(
      135deg,
      rgba(0, 212, 255, 0.1),
      rgba(26, 26, 26, 0.8)
    );
  }

  .link-item.featured:hover {
    border-color: var(--accent-blue);
    box-shadow: 0 15px 30px var(--glow-blue);
  }

  .link-content {
    flex: 1;
  }

  .link-content h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .link-content p {
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.4;
  }

  .link-arrow {
    font-size: 1.5rem;
    color: var(--accent-green);
    transition: transform 0.3s ease;
  }

  .link-item:hover .link-arrow {
    transform: translateX(5px);
  }

  .link-item.featured .link-arrow {
    color: var(--accent-blue);
  }

  @media (max-width: 768px) {
    main {
      padding-top: 70px;
    }

    .links-container {
      padding: 1rem;
    }

    .profile-image {
      width: 100px;
      height: 100px;
    }

    .profile-section h1 {
      font-size: 1.8rem;
    }

    .social-links {
      gap: 1rem;
    }

    .social-link {
      width: 45px;
      height: 45px;
    }

    .link-item {
      padding: 1.2rem;
    }

    .link-content h3 {
      font-size: 1.1rem;
    }

    .link-content p {
      font-size: 0.85rem;
    }
  }
</style>
